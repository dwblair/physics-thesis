journal = {Physical Review E},
keywords = {Soft Condensed Matter,Statistical Mechanics},
number = {5},
title = {{Orientational correlations and the effect of spatial gradients in the equilibrium steady state of hard rods in two dimensions: A study using deposition-evaporation kinetics}},
url = {http://link.aps.org/doi/10.1103/PhysRevE.72.051717},
volume = {72},
year = {2008}
}
