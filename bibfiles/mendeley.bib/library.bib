pmid = {12689723},
title = {{Is modularity necessary for evolvability? Remarks on the relationship between pleiotropy and evolvability.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/12689723},
volume = {69},
year = {2003}
}
