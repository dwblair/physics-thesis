@article{Hitchcock2003,
abstract = {We present a dual geometrical worm algorithm for two-dimensional Ising
models. The existence of such dual algorithms was first pointed out by
Prokof'ev and Svistunov $\backslash$cite\{ProkofevClassical\}. The algorithm is defined on
